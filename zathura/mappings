map q quit

map [index] J navigate_index collapse-all
map [index] j navigate_index collapse
map [index] k navigate_index down
map [index] l navigate_index up
map [index] ; navigate_index expand
map [index] : navigate_index expand-all

map j scroll left
map ; scroll right

map r       rotate rotate-ccw
map R       rotate rotate-cw
map -       zoom out
map +       zoom in
map =       adjust_window width
map <C-->   zoom out
map <C-+>   adjust_window width
map <C-=>   zoom in
map ,       navigate previous
map .       navigate next
map z       recolor
map v       recolor

# Janela
map <C-l> reload
map <F11> toggle_fullscreen
map b     toggle_statusbar
map <C-p> print

map <F1> goto top
map <F2> goto bottom
map <F4> scroll down
map <F5> scroll up
map <F6> scroll half-down
map <F7> scroll half-up

# this requires `sudo ln -s /usr/bin/setsid /usr/bin/ssid`
map gg    feedkeys <F1>:exec<Space>ssid<Space>-f<Space>zb<Space>gg<Return>
map G     feedkeys <F2>:exec<Space>ssid<Space>-f<Space>zb<Space>G<Return>
map k     feedkeys <F4>:exec<Space>ssid<Space>-f<Space>zb<Space>k<Return>
map l     feedkeys <F5>:exec<Space>ssid<Space>-f<Space>zb<Space>l<Return>
map <C-d> feedkeys <F6>:exec<Space>ssid<Space>-f<Space>zb<Space>ctrld<Return>
map <C-u> feedkeys <F7>:exec<Space>ssid<Space>-f<Space>zb<Space>ctrlu<Return>

map <Space> feedkeys :exec<Space>ssid<Space>-f<Space>zb<Space>k<Return>
unmap <Button1>
unmap <C-k>
unmap <C-l>
unmap d
unmap u

